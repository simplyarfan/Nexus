# Database Configuration (Neon PostgreSQL)
# IMPORTANT: Use unpooled connection for read-after-write consistency
# Neon provides these variables automatically when you connect your project:
POSTGRES_URL_NON_POOLING="postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/database?sslmode=require"
# OR use this alternative:
DATABASE_URL_UNPOOLED="postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/database?sslmode=require"

# DO NOT use pooled connections - they cause read-after-write issues:
# DATABASE_URL="postgresql://user:password@ep-xxx-xxx-pooler.region.aws.neon.tech/database"
# POSTGRES_URL="postgresql://user:password@ep-xxx-xxx-pooler.region.aws.neon.tech/database"

# Backend URL - REQUIRED (for OAuth callbacks, email links, etc.)
# Example: https://your-backend.vercel.app
BACKEND_URL=https://your-backend.vercel.app

# Frontend URL - REQUIRED (for email links, redirects, OAuth callbacks, etc.)
# Example: https://your-frontend.netlify.app
FRONTEND_URL=https://your-frontend.netlify.app

# CORS Configuration - REQUIRED - Comma-separated list of allowed origins
# Example: https://your-frontend.netlify.app,https://preview--your-app.netlify.app,http://localhost:3000
ALLOWED_ORIGINS=https://your-frontend.netlify.app,https://preview--your-app.netlify.app,http://localhost:3000,http://127.0.0.1:3000

# Company Configuration - REQUIRED
# Your company domain (without @)
# Example: yourcompany.com
COMPANY_DOMAIN=yourcompany.com

# Super Admin Email - REQUIRED
# The email address of the super administrator who has full system access
# Example: admin@yourcompany.com
SUPER_ADMIN_EMAIL=admin@yourcompany.com

# Support Email - REQUIRED
# The email address for support inquiries shown in emails and support pages
# Example: support@yourcompany.com
SUPPORT_EMAIL=support@yourcompany.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production

# Encryption Configuration (for OAuth tokens, sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key-change-this-in-production

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (Brevo/SendGrid/etc.)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USER=your-brevo-email@example.com
EMAIL_PASS=your-brevo-smtp-key
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME=Nexus AI Platform

# Admin Configuration (optional)
ADMIN_SECRET=your-admin-secret-for-seeding

# Redis Configuration (optional, for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Account Lockout Configuration
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Monitoring Thresholds (milliseconds)
SLOW_REQUEST_THRESHOLD=1000
VERY_SLOW_REQUEST_THRESHOLD=3000
SLOW_QUERY_THRESHOLD=100
VERY_SLOW_QUERY_THRESHOLD=500

# OpenAI API Configuration (for CV Intelligence and Interview Coordinator)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Microsoft OAuth Configuration (for Outlook Calendar integration)
OUTLOOK_CLIENT_ID=your-azure-app-client-id
OUTLOOK_CLIENT_SECRET=your-azure-app-client-secret
OUTLOOK_REDIRECT_URI=https://thesimpleai.netlify.app/auth/callback

# Google OAuth Configuration (for Google Calendar integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://thesimpleai.netlify.app/auth/google/callback

# Database Bootstrap Configuration
# Set to 'false' in production after initial setup to skip table initialization
DB_BOOTSTRAP=true

# Admin User Configuration (Development Only - NEVER use in production)
CREATE_DEFAULT_ADMIN=false
ADMIN_EMAIL=admin@example.com
