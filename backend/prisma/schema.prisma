// Prisma Schema - Matches Production Database
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          Int       @id @default(autoincrement())
  email                       String    @unique
  password_hash               String
  first_name                  String
  last_name                   String
  role                        String
  department                  String?
  job_title                   String?
  is_active                   Boolean   @default(true)
  is_verified                 Boolean   @default(false)
  verification_token          String?
  verification_expiry         DateTime?
  reset_token                 String?
  reset_token_expiry          DateTime?
  last_login                  DateTime?
  created_at                  DateTime  @default(now())
  updated_at                  DateTime  @updatedAt
  failed_login_attempts       Int       @default(0)
  account_locked_until        DateTime?
  outlook_access_token        String?
  outlook_refresh_token       String?
  outlook_token_expires_at    DateTime?
  outlook_email               String?
  two_factor_enabled          Boolean   @default(false)
  two_factor_secret           String?
  two_factor_code             String?
  two_factor_code_expires_at  DateTime?
  google_access_token         String?
  google_refresh_token        String?
  google_token_expires_at     DateTime?
  outlook_pkce_verifier       String?

  sessions                    UserSession[]
  cvBatches                   CvBatch[]
  interviews                  Interview[]

  @@map("users")
}

model UserSession {
  id             Int       @id @default(autoincrement())
  user_id        Int
  session_token  String    @unique
  refresh_token  String    @unique
  ip_address     String?
  user_agent     String?
  expires_at     DateTime
  created_at     DateTime  @default(now())

  user           User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

// CV Intelligence Models
model CvBatch {
  id              String      @id @default(uuid())
  userId          Int
  batchName       String
  position        String
  jobDescription  String?     @db.Text
  status          String      @default("processing")  // processing, completed, failed
  cvCount         Int         @default(0)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  candidates      Candidate[]

  @@map("cv_batches")
}

model Candidate {
  id                      String      @id @default(uuid())
  batchId                 String
  name                    String
  email                   String
  phone                   String?
  location                String?
  overallScore            Int
  experience              String?
  education               String?
  salary                  String?
  matchedSkills           String[]    // Array of matched skills
  missingSkills           String[]    // Array of missing skills
  additionalSkills        String[]    // Array of additional skills
  experienceTimeline      Json?       // JSON array of {company, role, period}
  certifications          String[]    // Array of certifications
  professionalAssessment  String?     @db.Text
  cvFileUrl               String?
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @updatedAt

  batch                   CvBatch     @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@map("candidates")
}

// Interview Coordinator Models
model Interview {
  id                String      @id @default(uuid())
  userId            Int
  candidateName     String
  candidateEmail    String
  position          String
  status            String      // awaiting_response, scheduled, completed, cancelled, rejected
  interviewType     String?     // technical, behavioral, cultural, final
  scheduledTime     DateTime?
  duration          Int?        // in minutes
  meetingLink       String?
  notes             String?     @db.Text
  rejectionReason   String?     @db.Text
  workflow          Json?       // JSON array of workflow stages
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("interviews")
}
