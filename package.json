{
  "name": "nexus",
  "version": "1.0.0",
  "description": "Nexus Application - Full Stack Platform",
  "private": true,
  "scripts": {
    "test": "npm run test:all",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "lint": "npm run lint:all",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "format:check:backend": "cd backend && npm run format:check",
    "format:check:frontend": "cd frontend && npm run format:check",
    "format:all": "npm run format:backend && npm run format:frontend",
    "lint:all": "npm run lint:backend && npm run lint:frontend",
    "lint:fix:all": "npm run lint:fix:backend && npm run lint:fix:frontend"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1"
  }
}
