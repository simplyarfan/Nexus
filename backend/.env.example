# Enterprise AI Hub Backend Configuration

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Database (Production PostgreSQL - Set these in your hosting platform)
POSTGRES_URL=postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://username:password@hostname:port/database

# Prisma Configuration (REQUIRED for new ticketing system)
# Use the NON-POOLING connection string from Neon for read-after-write consistency
# Find this in Neon Console -> Connection Details -> "Direct connection" (not "Pooled connection")
POSTGRES_URL_NON_POOLING=postgresql://username:password@ep-xxx.region.neon.tech/database?sslmode=require

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_at_least_32_characters_long

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@securemaxtech.com
EMAIL_PASS=your_gmail_app_password

# Outlook OAuth Configuration (for Interview Coordinator)
OUTLOOK_CLIENT_ID=your_azure_ad_application_client_id
OUTLOOK_CLIENT_SECRET=your_azure_ad_client_secret
OUTLOOK_TENANT_ID=common
OUTLOOK_REDIRECT_URI=https://thesimpleai.vercel.app/api/auth/outlook/callback

# Company Configuration
COMPANY_DOMAIN=securemaxtech.com
ADMIN_EMAIL=admin@securemaxtech.com

# Frontend Configuration
FRONTEND_URL=https://thesimpleai.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
CORS_ORIGINS=https://thesimpleai.netlify.app,https://thesimpleai.vercel.app

# Hugging Face Configuration (Free API)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here