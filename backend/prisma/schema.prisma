// Prisma Schema - Matches Production Database
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          Int       @id @default(autoincrement())
  email                       String    @unique
  password_hash               String
  first_name                  String
  last_name                   String
  role                        String
  department                  String?
  job_title                   String?
  is_active                   Boolean   @default(true)
  is_verified                 Boolean   @default(false)
  verification_token          String?
  verification_expiry         DateTime?
  reset_token                 String?
  reset_token_expiry          DateTime?
  last_login                  DateTime?
  created_at                  DateTime  @default(now())
  updated_at                  DateTime  @updatedAt
  failed_login_attempts       Int       @default(0)
  account_locked_until        DateTime?
  outlook_access_token        String?
  outlook_refresh_token       String?
  outlook_token_expires_at    DateTime?
  outlook_email               String?
  two_factor_enabled          Boolean   @default(false)
  two_factor_secret           String?
  two_factor_code             String?
  two_factor_code_expires_at  DateTime?
  google_access_token         String?
  google_refresh_token        String?
  google_token_expires_at     DateTime?
  outlook_pkce_verifier       String?

  sessions                    UserSession[]
  cvBatches                   CvBatch[]
  interviews                  Interview[]
  tickets                     SupportTicket[]  @relation("UserTickets")
  assignedTickets             SupportTicket[]  @relation("AssignedTickets")
  comments                    TicketComment[]  @relation("UserComments")
  notifications               Notification[]   @relation("UserNotifications")

  @@map("users")
}

model UserSession {
  id             Int       @id @default(autoincrement())
  user_id        Int
  session_token  String    @unique
  refresh_token  String    @unique
  ip_address     String?
  user_agent     String?
  expires_at     DateTime
  created_at     DateTime  @default(now())

  user           User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

// CV Intelligence Models
model CvBatch {
  id              String      @id @default(uuid())
  userId          Int
  batchName       String
  position        String
  jobDescription  String?     @db.Text
  status          String      @default("processing")  // processing, completed, failed
  cvCount         Int         @default(0)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  candidates      Candidate[]

  @@map("cv_batches")
}

model Candidate {
  id                      String      @id @default(uuid())
  batchId                 String
  name                    String
  email                   String
  phone                   String?
  location                String?
  overallScore            Int
  experience              String?
  education               String?
  salary                  String?
  matchedSkills           String[]    // Array of matched skills
  missingSkills           String[]    // Array of missing skills
  additionalSkills        String[]    // Array of additional skills
  experienceTimeline      Json?       // JSON array of {company, role, period}
  certifications          String[]    // Array of certifications
  professionalAssessment  String?     @db.Text
  cvFileUrl               String?
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @updatedAt

  batch                   CvBatch     @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@map("candidates")
}

// Interview Coordinator Models
model Interview {
  id                  String      @id @default(uuid())
  candidate_id        String
  candidate_name      String
  candidate_email     String
  job_title           String
  status              String
  interview_type      String?
  scheduled_time      DateTime?
  duration            Int?
  platform            String?
  meeting_link        String?
  calendly_link       String?
  google_form_link    String?
  panel_members       String?     @db.Text
  generated_questions String?     @db.Text
  notes               String?     @db.Text
  scheduled_by        Int
  outcome             String?
  scheduled_at        DateTime?
  cv_file_path        String?
  teams_meeting_id    String?
  created_at          DateTime    @default(now())
  updated_at          DateTime    @updatedAt

  user                User        @relation(fields: [scheduled_by], references: [id], onDelete: Cascade)

  @@map("interviews")
  @@index([scheduled_by])
  @@index([candidate_email])
  @@index([scheduled_time])
  @@index([status])
}

// Support Ticket System
model SupportTicket {
  id          Int       @id @default(autoincrement())
  user_id     Int
  subject     String    @db.VarChar(255)
  description String    @db.Text
  status      String    @default("open") @db.VarChar(50)
  priority    String    @default("medium") @db.VarChar(20)
  category    String    @default("general") @db.VarChar(50)
  assigned_to Int?
  resolution  String?   @db.Text
  resolved_at DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  user        User            @relation("UserTickets", fields: [user_id], references: [id], onDelete: Cascade)
  assignedTo  User?           @relation("AssignedTickets", fields: [assigned_to], references: [id], onDelete: SetNull)
  comments    TicketComment[]

  @@map("support_tickets")
  @@index([user_id])
  @@index([status])
  @@index([status, created_at])
  @@index([priority, status])
  @@index([user_id, status])
}

model TicketComment {
  id          Int      @id @default(autoincrement())
  ticket_id   Int
  user_id     Int
  comment     String   @db.Text
  is_internal Boolean  @default(false)
  created_at  DateTime @default(now())

  ticket      SupportTicket @relation(fields: [ticket_id], references: [id], onDelete: Cascade)
  user        User          @relation("UserComments", fields: [user_id], references: [id], onDelete: Cascade)

  @@map("ticket_comments")
  @@index([ticket_id, created_at])
}

// Notification System
model Notification {
  id         Int       @id @default(autoincrement())
  user_id    Int
  type       String    @db.VarChar(50)
  title      String    @db.VarChar(255)
  message    String    @db.Text
  metadata   Json?
  is_read    Boolean   @default(false)
  read_at    DateTime?
  created_at DateTime  @default(now())

  user       User      @relation("UserNotifications", fields: [user_id], references: [id], onDelete: Cascade)

  @@map("notifications")
  @@index([user_id])
  @@index([user_id, is_read])
}
